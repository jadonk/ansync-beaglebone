html
  overflow: auto
  height: 100%

body
  margin: 0
  padding: 0
  border: 0
  width: 100%
  height: 100%
  background: #069
  font-size: 90%
  font-family: Lucida Grande, Lucida Sans, Arial, sans-serif

img
  max-width: 100%
  max-height: 100%
  display: block
  vertical-align: middle

img.arrow
  margin: 1em auto

div.colmask
  position: relative
  clear: both
  float: left
  width: 90%
  height: 70%
  overflow: hidden
  background: #fff
  margin: 0 5%

div.rightcol,
div.centercol,
div.leftcol
  float: left
  width: 30%
  max-height: 100%

div#header, div#footer
  width: 90%
  margin: 0 5%
  height: 15%
  background: #fff

