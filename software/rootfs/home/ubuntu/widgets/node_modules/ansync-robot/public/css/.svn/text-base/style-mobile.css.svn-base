html {
  overflow: auto;
  height: 100%;
}

body {
  margin: 0;
  padding: 0;
  border: 0;
  width: 100%;
  height: 100%;
  background: #069;
  font-size: 90%;
  font-family: Lucida Grande, Lucida Sans, Arial, sans-serif;
}

/*img {
  width: 80%;
}*/

img#logo {
  margin: 1em;
  height: 100%;
  width: auto;
}

img#webcam {
  width: 100%;
  border: 3px solid red;
}

/* column container */
div {
    position:relative;  /* This fixes the IE7 overflow hidden bug */
    clear:both;
    float:left;
    width:90%;         /* width of whole page */
    height: 80%;
    overflow:hidden;        /* This chops off any overhanging divs */
    background: #fff;
    margin: 0 5%;
}

div.table {
    display: table-cell;
}

div#header, div#footer {
  width: 90%;
  margin: 0 5%;
  height: 10%;
  background: #fff;
}

table, tr {
  table-layout: fixed;
  width: 100%;
}

td.btntable {
  vertical-align: middle;
  text-align: center;
}

label, input {
  font-size: 200%;
  border: 0;
}

label {
  width: 15%;
}

h1 {
  font-weight: bold;
  margin-top: 0;
  text-align: center;
}
